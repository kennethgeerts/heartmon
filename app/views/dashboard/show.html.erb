<div class="box has-background-grey has-text-centered has-text-light">
  <h1 class="is-title is-size-3">
    <%= @game.client %> ‚Äì <%= @game.name %>
  </h1>
  <h2 class="is-title is-size-5">
    Starts <%= time_tag @game.start_at %><br />
    Ends <%= time_tag @game.stop_at %>
  </h2>
</div>

<div class="columns is-multiline">
  <% @game.teams.each do |team| %>
    <div class="column is-half">
      <%= tag.div data: { controller: 'team-heartbeat', 'team-heartbeat-team-value': team }, class: 'team-heartbeat' do %>
        <p class="has-text-right">
          <span class="tag is-medium">
            <%= team.name %>&nbsp;
            <% if team.live? %>‚ù§Ô∏è<% else %>ü§ç<% end %>
          </span>
        </p>
        <% if team.last_heart_rate %>
          <h1 class="is-size-1 has-text-centered has-text-weight-semibold"><%= team.last_heart_rate.rate %></h1>
          <h1 class="is-size-4 has-text-centered has-text-weight-semibold">avg <%= team.average_heart_rate %></h1>
          <h2 class="is-size-6 has-text-centered"><%= time_tag(team.last_heart_rate.time, format: '%H:%M:%S') %></h2>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>

<%= tag.div data: { controller: 'live-heartbeat', 'live-heartbeat-team-value': @team }, class: 'live-heartbeat' do %>
  <p class="has-text-right">
    <span class="tag is-medium">
      <%= @team.name %>&nbsp;
      <span data-live-heartbeat-target="heartEmoji">ü§ç</span>
    </span>
  </p>
  <h1 data-live-heartbeat-target="heartRate" class="is-size-1 has-text-centered has-text-light has-text-weight-semibold animate__animated animate__heartBeat"></h1>
  <h2 data-live-heartbeat-target="measuredAt" class="is-size-6 has-text-centered has-text-light"></h2>
<% end %>
